<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Home</title>
</head>
<header>
    <nav class="main-nav flexed">
        <div class="main-logo">
            <a href="/tracker" class="main-logo"><span>HOME/LOGO</span></a>
        </div>
        <div class="nav-others">
            <% if(user){ %>
                <a href="/logout"><span>Logout</span></a>
                <% } else { %>
                <a href="/login"><span>Login</span></a>
                <a href="/signup"><span>Create Account</span></a>
            <% } %>
        </div>
    </nav>
</header>
<body>
    <section>
        <% if (user) { %>
            <h1>Welcome <%= user.userName %></h1>
        <% } %>
    </section>
    <section>
        <div id="liked-shows" class="row">
            <% liked.forEach( el => { %>
                <div class="show-result col-6 col-sm-3 ">
                    <img class="show-img" src=<%= el.showImg %>>
                    <div class="show-info">
                        <a href="/tracker/search/<%= el.showId %>">
                            <h4 class="show-title"><%= el.showName %></h4>
                        </a>
                        <div class="flexed">
                            <span class="show-year flx-half"><%= el.showYear %></span>
                            <span class="show-lng flx-half"><%= el.showLanguage %></span>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>
    </section>
    <script src="js/main.js" type="text/javascript"></script>
</body>
</html>